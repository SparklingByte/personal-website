---
const { title, link, iconClass } = Astro.props;
---

<button
    ><a
        href={link}
        class="font-medium inline-block px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition"
        target="_blank"
        rel="noopener noreferrer">{title} <i class={iconClass}></i></a></button
>
