---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;
---

<img
  src={src}
  alt={alt}
  class:list={[className, "w-full object-cover"]}
/>