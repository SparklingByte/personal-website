{
  "compilerOptions": {
    // Setzt das Basisverzeichnis für die Auflösung von Pfaden.
    "baseUrl": ".",
    // Definiert die Aliase.
    "paths": {
      // Der Alias `@/*` wird auf den Ordner `src/*` abgebildet.
      "@/*": ["src/*"]
    },
    "strictNullChecks": true, // add if using `base` template
    "allowJs": true // required, and included with all Astro templates
    // ... andere Optionen
  },
  "extends": "astro/tsconfigs/base"
}
