---
import type { CollectionEntry } from "astro:content";
import BlackButton from "@/components/ui/buttons/BlackButton.astro";
import Tag from "@/components/ui/Tag.astro";
import BorderButton from "@/components/ui/buttons/BorderButton.astro";
import StatusIndicator from "@/components/ui/statusIndicators/StatusIndicator.astro";

interface Props {
    project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<div
    class="w-full flex flex-col justify-start items-start rounded-2xl text-left flex-2 border border-black/10 p-5 font-cascadia"
>
    <div>
        <StatusIndicator status={project.data.status} />
    </div>
    <h1 class="font-semibold text-4xl mt-5">{project.data.title}</h1>
    <h2 class="lg:text-xl text-xl mt-5">
        {project.data.description}
    </h2>
    <div class="mt-10">
        <h2 class="text-left text-sm">TECH I'VE USED</h2>
        <div class="flex justify-start flex-wrap gap-2 mt-2">
            {project.data.techUsed.map((tech) => <Tag title={tech} />)}
        </div>
        <div class="flex flex-wrap justify-start gap-4 mt-10">
            {
                project.data.repoLink && (
                    <BlackButton
                        title="Open Repository"
                        link={project.data.repoLink}
                        iconClass="fa-brands fa-github"
                        newTab={true}
                    />
                )
            }

            {
                project.data.liveLink && (
                    <BorderButton
                        title="Demo"
                        link={project.data.liveLink}
                        iconClass="fa-solid fa-link"
                        newTab={true}
                    />
                )
            }
        </div>
    </div>
</div>
